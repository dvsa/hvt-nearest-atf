{% set rangeEnd = (params.paginationSettings.scannedItemsCount / params.paginationSettings.perPage) + 1 %}

{% for i in range(1, rangeEnd) %}
  <li class="pagination__item">
    <a class="govuk-link pagination__link {% if params.paginationSettings.currentPage == i %} pagination__current {% endif %}" 
        href="{{ params.searchUri }}&page={{ i }}" 
        aria-label="Page {{ i }}">
      {{ i }}
    </a>
  </li>
{% endfor %}
